@model PROYECTO_TP_PNT1.Models.Reserva

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="entrada" class="control-label"></label>
                <input asp-for="entrada" class="form-control" />
                <span asp-validation-for="entrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="salida" class="control-label"></label>
                <input asp-for="salida" class="form-control" />
                <span asp-validation-for="salida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="idAlojamiento" asp-items="@(new SelectList(ViewBag.almessage,"idAlojamiento","nombre"))">
                    <option selected="selected" value=""> Select </option>
                </select>

            </div>
            <div class="form-group">
                <select asp-for="idCliente" asp-items="@(new SelectList(ViewBag.clmessage,"idCliente","nombre"))">
                    <option selected="selected" value=""> Select </option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="cantPersonas" class="control-label"></label>
                <input asp-for="cantPersonas" class="form-control" />
                <span asp-validation-for="cantPersonas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantHabitaciones" class="control-label"></label>
                <input asp-for="CantHabitaciones" class="form-control" />
                <span asp-validation-for="CantHabitaciones" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="desayuno" /> @Html.DisplayNameFor(model => model.desayuno)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}